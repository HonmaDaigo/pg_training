<h1>ブログ一覧</h1>

<article>
  <div class="container">
    <div class="row">
      <% @blogs.each do |blog| %>
        <div class="col-xs-12 col-md-4 blog-panel">
          <h2><%= blog.title %></h2>
          <p><%= blog.content %></p>
          <div>
            <%= link_to '詳細', blog_path(blog.id), class: 'btn btn-default' %>
            <% if logged_in? && blog.user.id == current_user.id %>
            <%= link_to "編集", edit_blog_path(blog.id), data: { confirm: '本当に編集していいですか？' }, class: 'btn btn-info' %>　
            <%= link_to '削除', blog_path(blog.id), method: :delete, data: { confirm: '本当に削除していいですか？' }, class: 'btn btn-danger' %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
    <br>
    <div id="new-blog-link">
      <%= link_to '新規ブログを作成する', new_blog_path, class: "btn btn-primary" %>
    </div>

  </div>
</article>